<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hamburguesa_KevinRosero.ViewsKR.BurgerItemPageKR"
             xmlns:models="clr-namespace:Hamburguesa_KevinRosero.Models"
             Title="Ingresa una Hamburguesa (Kevin Rosero)">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                            VerticalOptions="StartAndExpand">
            <Label Text="Nombre" />
            <Entry x:Name="nameB" Text="{Binding Name_KevinR}" />
            <Label Text="Descripción" />
            <Entry x:Name="descB" Text="{Binding Description_KevinR}" />
            <Label Text="¿Con queso extra?" />
            <CheckBox x:Name="check"
                        CheckedChanged="OnCheckBoxCheckedChanged" />
            <Button Text="Guardar"
                    Clicked="OnSaveClicked" />
            <Button Text="Borrar"
                    Clicked="DeletedClicked" />
            <Button Text="Cancelar"
                    Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>